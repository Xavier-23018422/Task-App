<!-- task.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Task App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Task App</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/addtask">Add new task</a>
              </li> 
            </ul>
          </div>
        </div>
    </nav>
    
    <div class="container">
        <br>
        <div class="text-center"><h2>Task Details</h2></div>
        <br>
        <% if (task) { %> <!-- Check if task data exists -->
            <div>
                <p><b>Task Name:</b><br> <%= task.taskName %></p>
                <p><b>Task Image:</b><br> <img src = "/images/<%= task.image %>" width="20%"></p>
                <p><b>Task Description:</b><br> <%= task.description %></p>
                <p><b>Deadline:</b><br> <%= new Date(task.deadline).toLocaleDateString() %></p> 
            </div>
        <% } else { %>
            <p>No task found.</p>
        <% } %>
        <a href ="/">Back</a>
    </div>
    
</body>
</html>
