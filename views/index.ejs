<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Task App</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Task App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/addTask">Add new task</a>
          </li> 
        </ul>
      </div>
    </div>
  </nav>
  <div class="container">
    <br>
    <div class="text-center"><h2>Task App Manager</h2></div>
    <br>
    <table class="table table-hover small text-center">
      <thead>
        <tr>
          <th width="100">Task Name</th>
          <th width="100">Task Image</th>
          <th width="50">Description</th>
          <th width="50">Deadline</th>
          <th width="50">Edit</th>
          <th width="50">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for (let i = 0; i < tasks.length; i++) { %>
          <tr>
            <td><a href="/task/<%= tasks[i].taskId %>"><%= tasks[i].taskName %></a></td>
            <td><img src="/images/<%= tasks[i].image %>" width="40%"></td>
            <td><%= tasks[i].description %></td>
            <td><%= new Date(tasks[i].deadline).toLocaleDateString() %></td>
            <td><a href="/editTask/<%= tasks[i].taskId %>">Edit</a></td>
            <td><a href="/deleteTask/<%= tasks[i].taskId %>" onclick="return confirm('Are you sure you want to delete this task?')">Delete</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
